<%= form_tag '/login' do %>
<h2 class="text-center">Login Form</h2>
<div container class= "text-center">
<div>

      <%= flash[:notice] if flash[:notice]%>

</div>
<div class="form-group p-4">
      <%= label_tag 'Username'%>
      <%= text_field_tag :name, params[:name], class: 'form-control-lg btn-light' %>
</div>
<div class="form-group p-4">
      <%= label_tag 'Password'%>
      <%= password_field_tag :password, params[:password], class: 'form-control-lg btn-light'%>
</div>

<div class="form-group p-4">
      <%=  submit_tag "Log In", class: 'form-control-lg btn-dark'%>
</div>
<div>
<% end %>