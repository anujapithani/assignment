<div id="wrapper">
  <%= render "admins/navbar" %>
  <%= render "admins/sidebar" %>
  <div class="content-page">
    <div class="content">
      <div class="container-fluid">
        <div class="container">
            <%= form_with scope: :employee, url: employees_path, local: true do |form| %>
            <h1>Employee Registration</h1>

        <div class="form-group p-2">
            <strong><%= form.label :name %></strong><br>
            <%= form.text_field :name, class:'form-control' %>
        </div>

        <div class="form-group p-2">
            <strong><%= form.label :email %></strong><br>
            <%= form.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group p-2">
            <strong><%= form.label :empid %></strong><br>
            <%= form.text_field :empid, class: 'form-control' %>
        </div>

        <div class="form-group p-2">
            <%= form.submit :register, class: 'form-control btn-light' %>
        </div>
        <% end %>
          <a href="/">home page</a>
        </div>
      </div>
    </div>
  </div>
</div>