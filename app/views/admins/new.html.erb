<%= form_for :admin, url: '/admin' do |form| %>
<h2 class="text-center">Sign Up </h2>
<div container class= "text-center">
<div>
        <% if flash[:notice].present?%>
        <%flash[:notice].each do |message| %>
        <p class="text-danger"><%= message %></p>
        <%end%>
        <%end%>
</div>

<div class="form-group p-2">
        <strong><%= form.label :user_name %></strong><br>
        <%= form.text_field :user_name, class: 'form-control-lg btn-light' %>
</div>

<div class="form-group p-2">
        <strong><%= form.label :email %></strong><br>
        <%= form.text_field :email, class: 'form-control-lg btn-light' %>
</div>

<div class="form-group p-2">
        <strong><%= form.label :password %></strong><br>
        <%= form.password_field :password, class: 'form-control-lg btn-light' %>
</div>

<br>
<div class="form-group p-2">
        <%=  submit_tag("Create Account") %>
</div>
<div>
<% end %>